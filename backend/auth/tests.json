{
  "tests": [
    {
      "name": "Register new user with email",
      "method": "POST",
      "body": {
        "action": "register",
        "username": "testuser",
        "password": "test1234",
        "email": "test@example.com",
        "createdAt": "2025-01-01T00:00:00.000Z"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "username": "testuser"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with correct credentials",
      "method": "POST",
      "body": {
        "action": "login",
        "username": "testuser",
        "password": "test1234"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "username": "testuser"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reset password with existing email",
      "method": "POST",
      "body": {
        "action": "reset_password",
        "email": "test@example.com"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reset password with non-existing email returns success",
      "method": "POST",
      "body": {
        "action": "reset_password",
        "email": "nonexistent@example.com"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}